{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "rootDir": "./src",
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "pretty": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": ["src/**/*", "__tests__/**/*.ts", "example/*.tsx"],
  "exclude": ["src/**/*.gen.tsx"]
}
