{
  "compilerOptions": {
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "lib": ["esnext", "dom"],
    "noUnusedLocals": true,
    "rootDirs": ["./src", "./stories"],
    "module": "es2015",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "noUnusedParameters": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "esnext"
  },
  "include": [
    "src/**/*",
    "__tests__/**/*.ts",
    "stories/**/*.tsx",
    "setupTests.ts"
  ]
}
